/* === Top bar layout adjustments === */
body.skin-minerva .minerva-header {
  background-color: #000 !important;
  height: 64px !important;
  display: flex !important;
  align-items: center !important;
  padding: 0 20px !important;
  border-bottom: 1px solid #111 !important;
}

/* Logo alignment and spacing */
body.skin-minerva .minerva-header .branding-box {
  display: flex !important;
  align-items: center !important;
  margin-right: 30px !important;
}

/* Hamburger alignment */
body.skin-minerva .minerva-header .main-menu-button {
  margin-right: 20px !important;
}

/* Search bar styling */
body.skin-minerva .minerva-header #searchInput {
  background-color: #111 !important;
  color: #fff !important;
  border: 1px solid #333 !important;
  padding: 8px 12px !important;
  border-radius: 6px !important;
  width: 280px !important;
}

/* Header icons (bell, user) */
body.skin-minerva .minerva-header .minerva-icon {
  filter: brightness(0) invert(1) !important;
  margin-left: 20px !important;
}

/* Logo image fix if using background logo */
